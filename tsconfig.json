{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": true,
		"diagnostics": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"outDir": "./",
		"pretty": true,
		"removeComments": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5",
		"lib": [ "es2015", "dom", "es6" ]
	},
	"files": [
		"./src/app/app.ts"
	],
	"exclude": [
		"node_modules"
	]
}